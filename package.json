{
  "name": "verify-it",
  "version": "1.2.0",
  "description": "Randomised test property/data generation for NodeJS",
  "keywords": [
    "testing",
    "test",
    "randomization",
    "random",
    "data",
    "property",
    "generation",
    "generator"
  ],
  "main": "index.js",
  "scripts": {
    "test": "JUNIT_REPORT_PATH=test/test-reports/report.xml nyc --all --include=index.js --include=src/**.js --reporter=html --reporter=text mocha --reporter mocha-jenkins-reporter test/*.js test/**/*.js",
    "posttest": "standard",
    "check-dependencies": "nsp check --output standard",
    "postcheck-dependencies": "scripts/spdx-non-copyleft.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbc/verify-it.git"
  },
  "author": "BBC",
  "license": "APACHE-2.0",
  "bugs": {
    "url": "https://github.com/bbc/verify-it/issues"
  },
  "engines": {
    "node": ">=4"
  },
  "homepage": "https://github.com/bbc/verify-it#readme",
  "dependencies": {
    "random-js": "^1.0.8"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "istanbul": "^0.4.5",
    "license-checker": "^16.0.0",
    "mocha": "^5.0.0",
    "mocha-jenkins-reporter": "^0.3.10",
    "nsp": "^3.1.0",
    "nyc": "^11.4.1",
    "sinon": "^4.3.0",
    "sinon-chai": "^2.14.0",
    "spdx-copyleft": "^0.1.1",
    "standard": "^11.0.0"
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "verify"
    ]
  }
}
