{
  "name": "verify-it",
  "version": "2.2.0",
  "description": "Randomised test property/data generation for NodeJS",
  "keywords": [
    "testing",
    "test",
    "randomization",
    "random",
    "data",
    "property",
    "generation",
    "generator"
  ],
  "main": "dist/index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsc && cp src/generators/*.json dist/src/generators/",
    "pretest": "npm run build",
    "test": "JUNIT_REPORT_PATH=test/test-reports/report.xml nyc --all --include=dist/index.js --include=dist/src/*.js --include=dist/src/*/**.js --reporter=html --reporter=text mocha --reporter mocha-jenkins-reporter test/*.js test/**/*.js",
    "posttest": "standard test && tslint --project .",
    "check-dependencies": "scripts/spdx-non-copyleft.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbc/verify-it.git"
  },
  "author": "BBC",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/bbc/verify-it/issues"
  },
  "engines": {
    "node": ">=6"
  },
  "homepage": "https://github.com/bbc/verify-it#readme",
  "dependencies": {
    "@types/node": "^10.12.2",
    "@types/random-js": "^1.0.31",
    "random-js": "^1.0.8",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-immutable": "^4.9.1",
    "typescript": "^3.1.6"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "istanbul": "^0.4.5",
    "license-checker": "^25.0.1",
    "mocha": "^5.2.0",
    "mocha-jenkins-reporter": "^0.4.0",
    "nyc": "^13.0.1",
    "testdouble": "^3.8.2",
    "spdx-copyleft": "^0.1.1",
    "standard": "^12.0.1"
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "verify"
    ]
  },
  "files": [
    "index.d.ts",
    "dist/index.js",
    "dist/index.js.map",
    "dist/src",
    "LICENSE"
  ]
}
